---
import { getCollection } from "astro:content";
import "../../styles/main.css";
import { SEO } from "astro-seo";
import { ViewTransitions } from "astro:transitions";

export const prerender = true;

const SITE_URL = "https://tomodevelops.com";

const allPosts = await getCollection("blog", ({ data }) => {
    return data.draft !== true;
});

// Sort by date descending
allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

function formatDate(date: Date, lang: string): string {
    return date.toLocaleDateString(lang === "ja" ? "ja-JP" : "en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
}
---

<html lang="ja">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <SEO
            title="Blog | TomoDevelops"
            description="Thoughts on web development, projects, and technology by TomoDevelops."
            canonical={`${SITE_URL}/blog`}
            openGraph={{
                basic: {
                    title: "Blog | TomoDevelops",
                    type: "website",
                    image: `${SITE_URL}/images/og-default.png`,
                    url: `${SITE_URL}/blog`,
                },
                optional: {
                    siteName: "TomoDevelops",
                    locale: "ja_JP",
                },
            }}
            twitter={{
                card: "summary_large_image",
                site: "@tomodevelops",
                creator: "@tomodevelops",
            }}
        />
        <ViewTransitions />
        <link
            rel="preload"
            href="/fonts/Terminess-Regular.ttf"
            as="font"
            type="font/ttf"
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            href="/fonts/Terminess-Bold.ttf"
            as="font"
            type="font/ttf"
            crossorigin="anonymous"
        />
    </head>
    <body class="antialiased selection:bg-green selection:text-navy">
        <!-- Noise texture overlay -->
        <div class="noise-overlay" aria-hidden="true"></div>

        <div class="min-h-screen relative">
            <!-- Background effects -->
            <div class="fixed inset-0 pointer-events-none" aria-hidden="true">
                <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(100,255,218,0.08),transparent)]"></div>
                <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_90%_80%,rgba(196,181,253,0.04),transparent)]"></div>
            </div>

            <header class="relative z-10 py-6 border-b border-lightest-navy/40">
                <div class="max-w-3xl mx-auto px-6 sm:px-8">
                    <a
                        href="/"
                        class="inline-flex items-center gap-2 text-slate/70 hover:text-green transition-all duration-300 font-mono text-sm group"
                    >
                        <span class="transform group-hover:-translate-x-1 transition-transform duration-300">&larr;</span>
                        <span>Back to Home</span>
                    </a>
                </div>
            </header>

            <main class="relative z-10 py-16 sm:py-20">
                <div class="max-w-3xl mx-auto px-6 sm:px-8">
                    <!-- Hero section -->
                    <div class="mb-16 blog-hero">
                        <div class="inline-block font-mono text-green text-sm tracking-wider mb-4 opacity-80">
                            {">"} ~/blog
                        </div>
                        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-lightest-slate tracking-tight blog-title">
                            Blog
                        </h1>
                        <p class="mt-4 text-slate text-lg sm:text-xl max-w-xl">
                            Thoughts on web development, projects, and more.
                        </p>
                        <div class="mt-6 h-px w-24 bg-gradient-to-r from-green/60 to-transparent"></div>
                    </div>

                    <!-- Posts list -->
                    <div id="posts-container" class="space-y-6">
                        {allPosts.map((post, index) => (
                            <article
                                class="group blog-post"
                                data-lang={post.data.lang}
                                style={`--delay: ${index * 100}ms`}
                            >
                                <a
                                    href={`/blog/${post.id}`}
                                    class="block p-6 -mx-2 sm:-mx-6 rounded-lg border border-transparent hover:border-lightest-navy/40 hover:bg-light-navy/30 transition-all duration-300 hover:shadow-[0_0_30px_rgba(100,255,218,0.04)]"
                                >
                                    <div class="flex flex-col gap-3">
                                        <div class="flex items-center gap-3">
                                            <div class="w-2 h-2 rounded-full bg-green/40 group-hover:bg-green transition-colors duration-300"></div>
                                            <time
                                                datetime={post.data.date.toISOString()}
                                                class="text-xs font-mono text-slate/50 group-hover:text-slate/70 transition-colors duration-300"
                                                data-date={post.data.date.toISOString()}
                                                data-lang={post.data.lang}
                                            >
                                                {formatDate(post.data.date, post.data.lang)}
                                            </time>
                                        </div>
                                        <h2 class="text-xl sm:text-2xl font-bold text-lightest-slate group-hover:text-green transition-colors duration-300 flex items-center gap-2">
                                            {post.data.title}
                                            <svg
                                                class="w-5 h-5 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7v10" />
                                            </svg>
                                        </h2>
                                        <p class="text-slate/80 leading-relaxed">
                                            {post.data.description}
                                        </p>
                                        {post.data.tags && post.data.tags.length > 0 && (
                                            <div class="flex flex-wrap gap-2 pt-2">
                                                {post.data.tags.map((tag) => (
                                                    <span class="px-2.5 py-1 text-xs font-mono rounded-md border border-lightest-navy/40 text-slate/60 bg-lightest-navy/10 group-hover:border-green/20 group-hover:text-slate/80 transition-all duration-300">
                                                        {tag}
                                                    </span>
                                                ))}
                                            </div>
                                        )}
                                    </div>
                                </a>
                            </article>
                        ))}
                    </div>

                    <p id="no-posts" class="text-slate/70 hidden py-12 text-center">
                        No posts yet. Check back soon!
                    </p>
                </div>
            </main>

            <footer class="relative z-10 py-8 border-t border-lightest-navy/40">
                <div class="max-w-3xl mx-auto px-6 sm:px-8 flex items-center justify-between">
                    <p class="text-xs text-slate/50 font-mono">
                        &copy; 2026 TomoDevelops
                    </p>
                    <div class="flex items-center gap-4">
                        <a
                            href="https://github.com/TomoDevelops"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate/40 hover:text-green transition-colors duration-300"
                            aria-label="GitHub"
                        >
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                        </a>
                        <a
                            href="https://twitter.com/TomoDevelops"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate/40 hover:text-green transition-colors duration-300"
                            aria-label="Twitter"
                        >
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </footer>
        </div>

        <style>
            .blog-hero {
                animation: fadeInUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
            }

            .blog-title {
                text-shadow: 0 0 60px rgba(100, 255, 218, 0.2);
            }

            .blog-post {
                opacity: 0;
                transform: translateY(20px);
                animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
                animation-delay: calc(0.2s + var(--delay, 0ms));
            }

            @keyframes fadeInUp {
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>

        <script>
            function filterPostsByLocale() {
                const locale = localStorage.getItem("locale") || "ja";
                const posts = document.querySelectorAll(".blog-post");

                // Count posts per locale
                let preferredCount = 0;
                let fallbackCount = 0;

                posts.forEach((post) => {
                    const postLang = post.getAttribute("data-lang");
                    if (postLang === locale) {
                        preferredCount++;
                    } else if (postLang === "ja") {
                        fallbackCount++;
                    }
                });

                // Use preferred locale if posts exist, otherwise fall back to Japanese
                const displayLocale = preferredCount > 0 ? locale : "ja";
                let visibleCount = 0;

                posts.forEach((post) => {
                    const postLang = post.getAttribute("data-lang");
                    if (postLang === displayLocale) {
                        (post as HTMLElement).style.display = "block";
                        visibleCount++;
                    } else {
                        (post as HTMLElement).style.display = "none";
                    }
                });

                const noPosts = document.getElementById("no-posts");
                if (noPosts) {
                    noPosts.classList.toggle("hidden", visibleCount > 0);
                }
            }

            // Run on page load and after View Transitions navigation
            document.addEventListener("astro:page-load", filterPostsByLocale);

            // Listen for storage changes (if locale changes in another tab)
            window.addEventListener("storage", (e) => {
                if (e.key === "locale") {
                    filterPostsByLocale();
                }
            });
        </script>
    </body>
</html>
